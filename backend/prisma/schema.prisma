generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  employee
  manager
  admin
  kitchen
}

model User {
  id           String              @id @default(uuid())
  externalId   String              @unique
  email        String              @unique
  passwordHash String
  name         String
  department  String
  role         UserRole            @default(employee)
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
}

model DepartmentLunch {
  id            String   @id @default(uuid())
  departmentId  String
  date          DateTime
  regularQuantity Int    @default(0)
  vegQuantity   Int      @default(0)
  totalQuantity Int      @default(0)
  updatedBy     String?
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())

  @@unique([departmentId, date])
  @@index([date])
}

model DepartmentLunchHistory {
  id            String   @id @default(uuid())
  departmentId  String
  date          DateTime
  regularQuantity Int    @default(0)
  vegQuantity   Int      @default(0)
  totalQuantity Int
  updatedBy     String?
  createdAt     DateTime @default(now())

  @@index([departmentId, date])
}

model LunchLock {
  id        String   @id @default(uuid())
  date      DateTime @unique
  locked    Boolean  @default(false)
  lockedAt  DateTime?
  lockedBy  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
